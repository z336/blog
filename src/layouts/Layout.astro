---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../styles/styles.css";

const currentPath = Astro.url.pathname;
const { pageTitle } = Astro.props;

const getFullPageTitle =
  currentPath === "/" ? `${pageTitle}` : `${pageTitle} | Jon Coleman`;
---

<html lang="en">
  <head>
    <link
      rel="preload"
      href="/AUTHENTICSans-90.woff"
      as="font"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/AlteHaasGroteskBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/external-link.svg"
      as="image"
      type="image/svg+xml"
    />
    <link
      rel="preload"
      href="/external-link-inverse.svg"
      as="image"
      type="image/svg+xml"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Jon Coleman's personal website and blog."
    />
    <meta
      name="keywords"
      content="Jon Coleman, technical writing, web development"
    />
    <meta name="author" content="Jon Coleman" />

    <title>
      {getFullPageTitle}
    </title>

    <meta property="og:title" content={getFullPageTitle} />
    <meta
      property="og:description"
      content="Jon Coleman's personal website and blog."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://joncoleman.me${currentPath}`} />
    <meta property="og:image" content="/favicon.svg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={getFullPageTitle} />
    <meta
      name="twitter:description"
      content="Jon Coleman's personal website and blog."
    />
    <meta name="twitter:image" content="/favicon.svg" />

    <meta name="theme-color" content="#2a2722" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content={getFullPageTitle} />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
  </head>
</html>
<body>
  <Header />
  <main id="main" tabindex="-1">
    <slot />
  </main>
  <Footer />
</body>
