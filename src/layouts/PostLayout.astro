---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
	<div class="wrapper">
		<div class="switcher article-header">
			<div>
				<h1>{frontmatter.title}</h1>
				<p>Posted: {frontmatter.pubDate.toString().slice(0, 10)}</p>
			</div>
			<div>
				<p>Topics</p>
				<ul>
					{frontmatter.tags.map((tag: string) => <li>{tag}</li>)}
				</ul>
			</div>
			<nav aria-label="article navigation">
				<p>Table of contents</p>
				<ol>
					<li><a href="/">What I've Accomplished</a></li>
					<li><a href="/">What's next</a></li>
				</ol>
			</nav>
		</div>
	</div>
	<div class="wrapper region prose flow">
		<p class="lede">
			<em>{frontmatter.description}</em>
		</p>
		<slot />
	</div>
	<div class="wrapper prose flow">
		<p><a href="#top">Back to top</a></p>
	</div>
</Layout>
