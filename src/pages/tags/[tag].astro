---
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const allPosts = Object.values(
    import.meta.glob("../writing/*.md", { eager: true }),
  );
  const uniqueTags = [
    ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
  ];
  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post: any) =>
      post.frontmatter.tags.includes(tag),
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout pageTitle={tag}>
  <div class="wrapper">
    <header class="border flow" data-wrapper-type="inner">
      <h1>{tag}</h1>
      <p>All the posts with his topic.</p>
    </header>
    <article>
      <div class="border region prose flow" data-wrapper-type="inner">
        <ul>
          {
            posts.map((post: any) => (
              <li>
                <a href={post.url}>{post.frontmatter.title}</a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="region flow" data-wrapper-type="inner">
        <p>View all <a href="/tags/">topics</a>.</p>
      </div>
    </article>
  </div>
</Layout>
